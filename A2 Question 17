#include <stdio.h>

int main() {
    int arr[] = {1, 2, 3, 2, 1};
    int n = sizeof(arr) / sizeof(arr[0]);
    int i, j;

    printf("Original Array: ");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    for (i = 0, j = n - 1; i < j; i++, j--) {
        int temp = arr[i];
        arr[i] = arr[j];
        arr[j] = temp;
    }

    printf("Reversed Array: ");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    int palindrome = 1;
    for (i = 0; i < n / 2; i++) {
        if (arr[i] != arr[n - i - 1]) {
palindrome = 0;
            break;
        }
    }

    if (palindrome) {
        printf("The array is palindrome.\n");
    } else {
        printf("The array is not palindrome.\n");
    }
 return 0;
}
